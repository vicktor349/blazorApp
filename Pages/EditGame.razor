@page "/game"
@using Models
@inject NavigationManager NavigationManager



<PageTitle>New Game</PageTitle>
<h1>Game Catalog</h1>
<h3>EditGame</h3>

<div class="row">
    <div class="col-sm-4">
        <EditForm Model="@game" OnSubmit="HandleSubmit">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <InputText id="name" @bind-Value="game.Name" class="form-control" require></InputText>
            </div>
            <div class="mb-3">
                <label for="genre" class="form-label">Genre:</label>
                <InputText id="genre" @bind-Value="game.Genre" class="form-control"></InputText>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <InputNumber id="price" @bind-Value="game.Price" class="form-control"></InputNumber>
            </div>
            <div class="mb-3">
                <label for="releaseDate" class="form-label">Release Date:</label>
                <InputDate id="releaseDate" @bind-Value="game.ReleaseDate" class="form-control"></InputDate>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </EditForm>
    </div>
</div>
@code {
    private Game game = new()
        {
            Name = string.Empty,
            Genre = string.Empty,
            ReleaseDate = DateTime.UtcNow
        };

    private void HandleSubmit()
    {
        GameClient.AddGame(game);
        NavigationManager.NavigateTo("/");
    }
};
